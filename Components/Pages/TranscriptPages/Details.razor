@page "/transcripts/details"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Transcript Details</PageTitle>
<link href="/css/classic.css" rel="stylesheet" />

<div class="container mt-4 classic-page">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card classic-card shadow-sm">
                <div class="card-header classic-header">
                    <h4 class="mb-0">Transcript Details</h4>
                </div>
                <div class="card-body">
                    @if (transcript is null)
                    {
                        <p><em>Loading...</em></p>
                    }
                    else
                    {
                        <dl class="row dl-compact">
                            <dt class="col-sm-3">Student</dt>
                            <dd class="col-sm-9">@transcript.StudentName (@transcript.StudentId)</dd>

                            <dt class="col-sm-3">Subject</dt>
                            <dd class="col-sm-9">@transcript.SubjectName</dd>

                            <dt class="col-sm-3">Total Score</dt>
                            <dd class="col-sm-9">@transcript.TotalScore</dd>
                        </dl>

                        <div class="mt-3">
                            <a class="btn classic-btn-primary btn-sm me-2" href="@($"/transcripts/edit?id={transcript.Id}")">Edit</a>
                            <a class="btn classic-btn-secondary btn-sm" href="/transcripts">Back to List</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public int? Id { get; set; }

    private Transcript? transcript;

    protected override async Task OnParametersSetAsync()
    {
        if (Id is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        using var context = DbFactory.CreateDbContext();
        transcript = await context.Transcripts.FirstOrDefaultAsync(t => t.Id == Id.Value);

        if (transcript is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
