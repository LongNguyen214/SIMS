@page "/transcripts/edit"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Transcript</PageTitle>
<link href="/css/classic.css" rel="stylesheet" />

<div class="container mt-4 classic-page">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card classic-card shadow-sm">
                <div class="card-header classic-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Edit Transcript</h4>
                    <small class="text-muted">ID: @(TranscriptModel?.Id ?? 0)</small>
                </div>
                <div class="card-body">
                    @if (TranscriptModel is null)
                    {
                        <p><em>Loading...</em></p>
                    }
                    else
                    {
                        <EditForm Model="TranscriptModel" OnValidSubmit="UpdateTranscript" FormName="edit-transcript-form">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger mb-3" />

                            <div class="mb-3 row">
                                <label for="studentid" class="col-sm-3 col-form-label text-end">Student ID:</label>
                                <div class="col-sm-9">
                                    <InputText id="studentid" @bind-Value="TranscriptModel.StudentId" class="form-control" />
                                    <ValidationMessage For="() => TranscriptModel.StudentId" class="text-danger" />
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="studentname" class="col-sm-3 col-form-label text-end">Student Name:</label>
                                <div class="col-sm-9">
                                    <InputText id="studentname" @bind-Value="TranscriptModel.StudentName" class="form-control" />
                                    <ValidationMessage For="() => TranscriptModel.StudentName" class="text-danger" />
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="subjectid" class="col-sm-3 col-form-label text-end">Subject:</label>
                                <div class="col-sm-9">
                                    <InputSelect id="subjectid" @bind-Value="TranscriptModel.SubjectId" class="form-select">
                                        <option value="0">-- Select subject --</option>
                                        @foreach (var s in Subjects)
                                        {
                                            <option value="@s.Id">@s.Name</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="() => TranscriptModel.SubjectId" class="text-danger" />
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="totalscore" class="col-sm-3 col-form-label text-end">Total Score:</label>
                                <div class="col-sm-9">
                                    <InputNumber id="totalscore" @bind-Value="TranscriptModel.TotalScore" class="form-control" />
                                    <ValidationMessage For="() => TranscriptModel.TotalScore" class="text-danger" />
                                </div>
                            </div>

                            <div class="mt-4 d-flex justify-content-end">
                                <a class="btn classic-btn-secondary me-2" href="/transcripts">Cancel</a>
                                <button type="submit" class="btn classic-btn-primary">Save</button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public int Id { get; set; }

    private Transcript? TranscriptModel { get; set; }

    private List<Subject> Subjects { get; set; } = new();

    protected override async Task OnParametersSetAsync()
    {
        using var context = DbFactory.CreateDbContext();
        TranscriptModel = await context.Transcripts.FindAsync(Id);

        if (TranscriptModel is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        Subjects = await context.Subjects.AsNoTracking().ToListAsync();
    }

    private async Task UpdateTranscript()
    {
        using var context = DbFactory.CreateDbContext();
        var subject = await context.Subjects.FindAsync(TranscriptModel!.SubjectId);
        TranscriptModel.SubjectName = subject?.Name ?? string.Empty;

        context.Attach(TranscriptModel!).State = EntityState.Modified;
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/transcripts");
    }
}
