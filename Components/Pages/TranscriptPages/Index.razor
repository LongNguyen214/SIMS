@page "/transcripts"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@using Microsoft.AspNetCore.Components.Authorization
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Transcripts</PageTitle>
<link href="/css/classic.css" rel="stylesheet" />

<div class="container classic-page mt-4">
    <div class="card classic-card shadow-sm">
        <div class="card-header classic-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0">Transcripts</h4>
            </div>

            @if (isAdmin)
            {
                <a class="btn classic-btn-primary" href="/transcripts/create">Create New</a>
            }

        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <p><em>Loading...</em></p>
            }
            else if (Transcripts.Count == 0)
            {
                <div class="alert alert-info">No transcripts found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered classic-table">
                        <thead class="table-light">
                            <tr>
                                <th>Student</th>
                                <th>Subject</th>
                                <th>Course</th>
                                <th>Total Score</th>
                                @if (isAdmin)
                                {
                                    <th style="width:200px">Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Transcripts)
                            {
                                <tr>
                                    <td>@t.StudentName</td>
                                    <td>@t.SubjectName</td>
                                    <td>@t.CourseName</td>
                                    <td>@t.TotalScore</td>

                                    @if (isAdmin)
                                    {
                                        <td>
                                            <a class="btn btn-sm btn-outline-secondary me-1" href="@($"/transcripts/details?id={t.Id}")">Details</a>
                                            <a class="btn btn-sm btn-outline-primary me-1" href="@($"/transcripts/edit?id={t.Id}")">Edit</a>
                                            <a class="btn btn-sm btn-outline-danger" href="@($"/transcripts/delete?id={t.Id}")">Delete</a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Transcript> Transcripts { get; set; } = new();
    private bool isLoading = true;
    private bool isAdmin = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            isAdmin = user.IsInRole("Admin");
        }

        using var context = DbFactory.CreateDbContext();
        Transcripts = await context.Transcripts
            .AsNoTracking()
            .OrderBy(t => t.StudentName)
            .ToListAsync();

        isLoading = false;
    }
}
