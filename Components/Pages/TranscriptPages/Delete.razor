@page "/transcripts/delete"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Transcript</PageTitle>
<link href="/css/classic.css" rel="stylesheet" />

<div class="container mt-4 classic-page">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card classic-card shadow-sm">
                <div class="card-header classic-header">
                    <h4 class="mb-0">Delete Transcript</h4>
                </div>
                <div class="card-body">
                    <p class="text-warning">Are you sure you want to delete this transcript?</p>

                    @if (transcript is null)
                    {
                        <p><em>Loading...</em></p>
                    }
                    else
                    {
                        <dl class="row dl-compact">
                            <dt class="col-sm-3">Student</dt>
                            <dd class="col-sm-9">@transcript.StudentName (@transcript.StudentId)</dd>

                            <dt class="col-sm-3">Subject</dt>
                            <dd class="col-sm-9">@transcript.SubjectName</dd>

                            <dt class="col-sm-3">Total Score</dt>
                            <dd class="col-sm-9">@transcript.TotalScore</dd>
                        </dl>

                        <EditForm Model="transcript" OnValidSubmit="DeleteTranscript" FormName="delete-transcript-form">
                            <div class="d-flex justify-content-end">
                                <a class="btn classic-btn-secondary me-2" href="/transcripts">Cancel</a>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public int? Id { get; set; }

    private Transcript? transcript;

    protected override async Task OnParametersSetAsync()
    {
        if (Id is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        using var context = DbFactory.CreateDbContext();
        transcript = await context.Transcripts.FirstOrDefaultAsync(t => t.Id == Id.Value);

        if (transcript is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTranscript()
    {
        if (Id is null)
            return;

        using var context = DbFactory.CreateDbContext();
        var entity = await context.Transcripts.FindAsync(Id.Value);
        if (entity is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        context.Transcripts.Remove(entity);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/transcripts");
    }
}
